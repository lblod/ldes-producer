{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/"
  ],
  "exclude": [
    "!src/"
  ],
  "compilerOptions": {
    "outDir": ".",
    "baseUrl": "./src",
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "sourceMap": true
  }
}
